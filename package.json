{
  "name": "react-usekit",
  "version": "1.0.0",
  "description": "Drop-in React hooks and utility functions â€” zero boilerplate, maximum productivity",
  "homepage": "https://react-usekit.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/brijeshkumaryadav/react-usekit.git"
  },
  "bugs": {
    "url": "https://github.com/brijeshkumaryadav/react-usekit/issues"
  },
  "main": "index.js",
  "scripts": {
    "dev:docs": "pnpm -F docs dev",
    "build:docs": "pnpm -F docs build",
    "build:cli": "pnpm -F react-usekit build",
    "link:cli": "cd packages/cli && pnpm link --global",
    "unlink:cli": "pnpm remove -g react-usekit",
    "lint": "echo 'Linting temporarily disabled - will fix in future PR'",
    "lint:fix": "echo 'Linting temporarily disabled - will fix in future PR'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "echo 'Type checking temporarily disabled - will fix in future PR'",
    "prepare": "husky install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf node_modules/.cache && rm -rf apps/docs/.next && rm -rf packages/*/dist"
  },
  "keywords": [
    "react",
    "hooks",
    "cli",
    "utilities",
    "typescript",
    "javascript",
    "frontend",
    "development",
    "zero-dependencies",
    "boilerplate",
    "productivity",
    "open-source"
